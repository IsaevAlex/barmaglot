<%= render 'layouts/header' %><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
      <div class="col-md-6">
        <div class="sign-back">
          <h2>Регистрация</h2><br>
          <%= devise_error_messages! %>  
              <div class="form-group">
                    <%= f.text_field :name, :placeholder => "Фамилия и имя", autofocus: true, class:"form-control" %>
              </div> <br>

              <div class="form-group">
                    <%= f.email_field :email, :placeholder => "Эл.адрес", autofocus: true, class:"form-control" %>
              </div> <br>
              <div class="form-group">
                    <%= f.password_field :password, :placeholder => 'Пароль', class:"form-control form-control-tag" %>
              </div> <br>
              <div class="form-group">
                    <%= f.password_field :password_confirmation, :placeholder => "Подтверждение пароля", autocomplete: "on", class:"form-control" %>
              </div> <br>
              <div class="form-group">
                  <%= link_to  user_facebook_omniauth_authorize_path do %>
                      <i class="fa fa-facebook-official fa-3x" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to  user_twitter_omniauth_authorize_path do %>  
                      <i class="fa fa-twitter-square fa-3x" aria-hidden="true"></i>
                  <% end %>
                  <%= link_to  user_vkontakte_omniauth_authorize_path do %>  
                      <i class="fa fa-vk fa-3x" aria-hidden="true"></i>
                  <% end %>
              </div>
              
              <div class="form-group">
                  <%= f.submit "Зарегистрироваться", class: "btn btn-primary btn-sign-up" %>
              </div>
          </div>    
      </div>
    </div>
<% end %>