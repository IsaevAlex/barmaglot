<div class="panel panel-white post panel-shadow">
	<div class="post-heading">
         <div class="pull-left image">
         	<%= link_to image_tag("avatar.png", class:"img-rounded avatar", :size => '60x60'), comment.user %>
         </div>
         <div class="pull-left meta">
         	<b><%= link_to comment.user.name, comment.user %></b>
                            добавила отзыв
            <h6 class="text-muted time"><%= comment.created_at %></h6>
         </div>
          <% if can? :destroy, comment %>
             <%= link_to [comment.commentable, comment], method: :delete, :remote => true,  data: { confirm: "Вы уверены?" } do %>
                <i class="fa fa-trash-o fa-2x pull-right" aria-hidden="true"></i>
             <% end %>
         <% end %>
    </div> 
    <div class="post-description comment">
    		<h4><%= comment.text %></h4>
    </div>
</div>
