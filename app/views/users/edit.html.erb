<%= render 'layouts/header' %>
<%= nested_form_for [@user], mutipart: true do |form| %> 
	<div class="row">
      <div class="col-md-6">
        <div class="sign-back">
          <h2>Настройки профиля</h2><br>
		  <div class="form-group">
			  	<%= form.fields_for :phones do |phone| %>  
					<%= phone.text_field(:name) %>
			      	<%= phone.link_to_remove "Удалить" %>
				<% end %>
				<p>
					<%= form.link_to_add :phones do %>
						<i class="fa fa-phone fa-2x" aria-hidden="true"></i>
					<% end %>
				</p>
		   </div>
		   <div class="form-group">
                <%= form.submit "Отредактировать", class: "btn btn-primary btn-sign-up" %>
            </div>
		</div>
	  </div>
	</div>

<% end %>