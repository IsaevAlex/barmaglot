<div class="panel panel-white post panel-shadow">
    <div class="post-heading">
            <div class="pull-left image">            
                <%= link_to image_tag("avatar.png", class:"img-rounded avatar"), feed_item.user  %>
            </div>
            <div class="pull-left meta">
                <a href="#"><b><%= feed_item.user.name %></b></a>
                <p><%= feed_item.created_at %></p>
            </div>
            <div class="pull-right meta">
                <%= link_to "Подробнее", feed_item, remote: true,  data: { toggle: "modal", target: "#showPostModal" }, class:"btn"  %>
            </div>
    </div> 
    <div class="post-description"> 
        <div class="post-description-info">
            <h3>
                <%= feed_item.name%>
            </h3>
        </div>
        <% feed_item.post_images.take(1).each do | image | %>
            <%= image_tag image.avatar.url, :size => "530x350" %>
        <% end %><br><br>
        <p><%= feed_item.description %></p>
         <div class="inline">
            <%= link_to like_post_path(feed_item, type: "like"), method: :put, remote: true do %>
                <div class="votes-<%= feed_item.id %> vote">
                    <i class="fa fa-heart-o fa-2x" aria-hidden="true"></i> <%= feed_item.post_voices.count %>
                </div>
            <% end %>
            <i class="fa fa-comment-o fa-2x" aria-hidden="true"></i> <%= feed_item.post_comments.count %>
        </div>
    </div>
</div>
    