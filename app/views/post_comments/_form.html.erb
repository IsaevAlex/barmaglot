<%= form_for([@post, @post.post_comments.build], remote: true) do |f| %>
	<ul class="errors" style="list-style: none;"></ul>
	<div class="form-group">
		<%= f.text_area :comment, autofocus: true, cols: "40", rows: "5", class:"form-control" %>
	</div>

	<%= f.submit "Добавить",  class: "btn pull-right" %>
	
<% end %>	